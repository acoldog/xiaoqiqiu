<?php
/**
 *  controller公共父类
 */
abstract class Controller{
	protected $mod 			= null;
	protected $load 		= null;

	public function __construct($class_name)
	{
		$mod_name = str_replace('_ctl', '_mod', $class_name);
		$this->mod = new $mod_name();
		//	检查登录用户
		checkUser();
	}

	public function __destruct(){
		$this->load = new Load();
	}
}